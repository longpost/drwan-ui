{
  "name": "@drwan/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./theme.css": "./dist/theme.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "peerDependencies": {
    "next": ">=13",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "typescript": "^5.4.0"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "types": [
      "react",
      "react-dom"
    ],
    "declaration": true,
    "outDir": "dist",
    "emitDeclarationOnly": false
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node ./scripts/copy-css.mjs",
    "prepare": "npm run build"
  }
}
